{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fellowus.app/schemas/matching.candidate_window.schema.json",
  "title": "matching.candidate_window",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://fellowus.app/schemas/common.json"
    }
  ],
  "properties": {
    "eventName": {
      "const": "matching.candidate_window"
    },
    "eventVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string"
    },
    "requestId": {
      "type": ["string", "null"]
    },
    "matchId": {
      "type": ["string", "null"]
    },
    "channelId": {
      "type": ["string", "null"]
    },
    "channelType": {
      "type": ["string", "null"],
      "enum": ["dm", "group", null]
    },
    "userId": {
      "type": ["string", "null"]
    },
    "participants": {
      "type": ["array", "null"],
      "items": {
        "type": "string"
      }
    },
    "intent": {
      "type": ["string", "null"],
      "enum": ["incident", "route", "social", "coach", null]
    },
    "platform": {
      "type": ["string", "null"],
      "enum": ["ios", "android", "web", null]
    },
    "appVersion": {
      "type": ["string", "null"]
    },
    "locale": {
      "type": ["string", "null"]
    },
    "region": {
      "type": ["string", "null"]
    },
    "privacyTier": {
      "type": ["string", "null"],
      "enum": ["anon", "low", "high", null]
    },
    "slotRequestId": {
      "type": "string"
    },
    "candidateCount": {
      "type": "integer",
      "minimum": 0
    },
    "filtersApplied": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "averageDistanceKm": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "traceId",
    "candidateCount",
    "eventVersion",
    "filtersApplied",
    "slotRequestId",
    "eventName",
    "averageDistanceKm",
    "eventTime"
  ]
}
