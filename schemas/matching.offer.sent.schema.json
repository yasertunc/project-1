{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.fellowus.com/schemas/matching.offer.sent.schema.json",
  "title": "matching.offer.sent",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://www.fellowus.com/schemas/common.json"
    }
  ],
  "properties": {
    "eventName": {
      "const": "matching.offer.sent"
    },
    "eventVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time"
    },
    "traceId": {
      "type": "string"
    },
    "requestId": {
      "type": ["string", "null"]
    },
    "matchId": {
      "type": "string"
    },
    "channelId": {
      "type": ["string", "null"]
    },
    "channelType": {
      "type": ["string", "null"],
      "enum": ["dm", "group", null]
    },
    "userId": {
      "type": ["string", "null"]
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "intent": {
      "type": ["string", "null"],
      "enum": ["incident", "route", "social", "coach", null]
    },
    "platform": {
      "type": ["string", "null"],
      "enum": ["ios", "android", "web", null]
    },
    "appVersion": {
      "type": ["string", "null"]
    },
    "locale": {
      "type": ["string", "null"]
    },
    "region": {
      "type": ["string", "null"]
    },
    "privacyTier": {
      "type": ["string", "null"],
      "enum": ["anon", "low", "high", null]
    },
    "score_total": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "score_match": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "score_safety": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "score_novelty": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "score_diversity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "cap_mic": {
      "type": "boolean"
    },
    "cap_text": {
      "type": "boolean"
    },
    "cap_share_location": {
      "type": "boolean"
    },
    "geo_avg_distance_km": {
      "type": "number",
      "minimum": 0
    },
    "queue_depth": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "traceId",
    "eventVersion",
    "score_total",
    "participants",
    "cap_text",
    "cap_mic",
    "eventName",
    "matchId",
    "cap_share_location",
    "eventTime"
  ]
}
