{
  "cli": {
    "version": ">= 16.26.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "android": {
        "buildType": "apk",
        "config": {
          "minSdkVersion": 23,
          "targetSdkVersion": 33
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "config": {
          "minSdkVersion": 23,
          "targetSdkVersion": 33
        }
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "config": {
          "minSdkVersion": 23,
          "targetSdkVersion": 33
        }
      }
    },
    "production-apk": {
      "autoIncrement": true,
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "config": {
          "minSdkVersion": 23,
          "targetSdkVersion": 33
        }
      }
    },
    "preview-ios": {
      "distribution": "internal",
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "ios": {
        "simulator": true,
        "deploymentTarget": "13.0"
      }
    },
    "production-ios": {
      "autoIncrement": true,
      "env": {
        "EAS_PROJECT_ROOT": "apps/mobile"
      },
      "ios": {
        "simulator": false,
        "deploymentTarget": "13.0"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./apps/mobile/.eas/android-service-account.json",
        "track": "internal"
      },
      "ios": {
        "ascAppId": "com.fellowus.app"
      }
    }
  }
}
